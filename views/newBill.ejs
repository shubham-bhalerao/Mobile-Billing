<% include partials/header%>
<div class="container">
   <h1 style="text-align:center">Confirm Booking</h1>
   <div style="width:30%; margin: 20px auto;">
      <form action="/bills/<%=mobile._id%>" method="POST">
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.name%>" name="bill[productName]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.price%>" name="bill[price]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" placeholder="PrePaid Or PostPaid" name="bill[preOrPost]">
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Confirm Payment</button>
         </div>
      </form>
      <a href="/mobiles">Back to mobiles</a>
   </div>

</div>
<% include partials/footer%>