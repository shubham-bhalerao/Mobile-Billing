<% include ../partials/header%>
<div class="container">
   <h1 style="text-align:center">Add Comment to <%=mobile.name%></h1>
   <div style="width:30%; margin: 20px auto;">
      <form action="/mobiles/<%=mobile._id%>/comments" method="POST">
         <div class="form-group">
            <input type="text" class="form-control" placeholder="Text" name="comment[text]">
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
         </div>
      </form>
      <a href="/mobiles">Back to Mobiles</a>
   </div>

</div>
