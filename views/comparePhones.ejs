<% include partials/header%>

<div class="container">
   <div class="row">
      <div class="col-md-6 col-sm-12">
         <div class="card campground-section">
            <img style="height: 300px;" class="img-responsive show-img card-img-top" src="<%=mobileOne.image%>">
            <div class="card-body">
               <div class="card-title">
                  <h4 style="display: inline;"><%=mobileOne.name%></h4>
                  <span style="float: right;" class="text-right">
                     <a href="<%=mobileOne.link%>" class="btn btn-secondary btn-xs">More Info</a>

                     <a href="/buy/<%=mobileOne._id%>" class="btn btn-primary btn-xs">Buy</a>

               </div>
               <hr>
               <p style="font-size: 1.5rem;">Price : <%=mobileOne.price%></p>
               <hr>
               <p style="font-size: 1.5rem;">Specifications:</p>
               <p style="font-size: 1rem;">
                  CPU : <%=mobileOne.cpu %>
               </p>
               <p style="font-size: 1rem;">
                  RAM AND STORAGE :<%=mobileOne.ram %>
               </p>
               <p style="font-size: 1rem;">
                  CAMERA : <%=mobileOne.camera%>
               </p>
               <hr>
               <p style="font-size: 1.5rem;">Description:</p>

               <p>
                  <%=mobileOne.description %>
               </p>
            </div>
         </div>
      </div>
