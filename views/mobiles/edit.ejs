<% include ../partials/header%>

<div class="container">
   <h1 style="text-align:center">Edit <%=mobile.name%></h1>
   <div style="width:30%; margin: 20px auto;">
      <form action="/mobiles/<%=mobile._id%>?_method=PUT" method="POST">
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.name%>" name="mobile[name]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.ram%>" name="mobile[ram]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.cpu%>" name="mobile[cpu]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.camera%>" name="mobile[camera]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.link%>" name="mobile[link]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.description%>" name="mobile[description]">
         </div>
         <div class="form-group">
            <input type="text" class="form-control" value="<%=mobile.price%>" name="mobile[price]">
         </div>
         <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Update mobile</button>
         </div>
      </form>
      <a href="/mobiles">Back to mobiles</a>
   </div>
</div>
<% include ../partials/footer%>